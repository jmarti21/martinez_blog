<h2>Comments</h2>
<div id="comments">
	<% @post.comments.each do |comment| %> 
		<%= div_for comment do %>
			<p> 
			<strong>
				Posted <%= time_ago_in_words(comment.created_at) %> 
			</strong><br />
			<%= h(comment.body) %>
			</p>
		<% end %>
	<% end %>
</div>

<%= form for [@post, Comment.new] do |f| %>
	<p>
     	<%= f.label :body, "New Comment" %><br />
		<%= f.text_area :body %> 
	</p>
	<p><%= f.submit "Add Comment" %></p>
<% end %>